(define application?
  (lambda (expression)
    (pair? expression)))

(define case-else-clause?
  (lambda (clause)
    (eq? (case-predicate clause) 'else)))

(define compound-procedure?
  (lambda (procedure)
    (tagged-list? procedure 'procedure)))

(define definition?
  (lambda (expression)
    (tagged-list? expression 'define)))

(define if?
  (lambda (expression)
    (tagged-list? expression 'if)))

(define self-evaluating?
  (lambda (expression)
    (or (number? expression))))

(define tagged-list?
  (lambda (expression tag)
    (if (pair? expression)
        (eq? (car expression) tag)
        #f)))

(define variable? symbol?)